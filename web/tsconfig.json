{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./",
        "skipLibCheck": true,
        "types": ["webpack-env", "jest"],
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": ["../node_modules"]
}
